
@{
    ViewBag.Title = "AddLecture";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">
    <h3 class="text-muted text-center mb-3">Ders Ekleme</h3>
</div>

<div class="container contact w-75 ">
    <div class="row bg-light">

        <div class="col-md-3">
            <div class="contact-info mt-4 ml-3">
                <i class="fas fa-plus fa-3x" style="color: green;"></i>


            </div>
        </div>

        <div class="col mt-4">

            <form action="">

                <div class="contact-form">

                    <div class="form-group">
                        <label class="control-label " for="fname">Ders Kodu:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="fname" pattern="[0-9]+"
                                   placeholder="Ders kodu giriniz" name="fname" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label " for="fname">Ders Adı:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="fname" placeholder="Ders adı giriniz" name="fname"
                                   required>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Öğretim Türü</label>
                        <div class="col-sm-8">

                            <select class="form-control " id="exampleFormControlSelect1">
                                <option>Birinci Öğretim</option>
                                <option>İkinci Öğretim</option>
                            </select>

                        </div>

                    </div>



                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Bölüm</label>
                        <div class="col-sm-8">

                            <select class="form-control " id="exampleFormControlSelect1">
                                <option>Bilgisayar Mühendisliği</option>
                                <option>Yönetim Bilişim Sistemleri</option>
                                <option>Elektrik Elektronik Mühendisliği</option>

                            </select>

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label " for="fname">Kredi</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="fname" pattern="[0-9]+"
                                   placeholder="Dersin kredisini giriniz" name="fname" required>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Dönem</label>
                        <div class="col-sm-8">

                            <select class="form-control " id="exampleFormControlSelect1">
                                <option>Güz</option>
                                <option>Bahar</option>
                            </select>

                        </div>

                    </div>


                    <div class="form-group ">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success  ">Ders Ekle</button>
                        </div>
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>
