@using StudentRegistrationSystem.Models.Entity
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">
    <h3 class="text-muted text-center mb-3">Bölüm Ekleme</h3>
</div>

@{Department department = new Department();}
<div class="container contact w-75">
    <div class="row bg-light">

        <div class="col-md-3">
            <div class="contact-info mt-4 ml-3">
                <i class="fas fa-plus fa-3x" style="color: green;"></i>


            </div>
        </div>

        <div class="col mt-4">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="contact-form">


                    <div class="form-group">
                        <label class="control-label " for="fname">Kod:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(n => department.DepartmentCode, new { @class = "form-control", placeholder = "Bölümün Kodu", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label " for="fname">Ad:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(n => department.Name, new { @class = "form-control", placeholder = "Bölümün Adı", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label " for="fname">Telefon:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(n => department.Phone, new { @class = "form-control", pattern = "[0-9]+", placeholder = "Telefon Numarası", required = "required" })
                        </div>
                    </div>

                    <div class="form-group ">
                        <br />
                        <br />
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success ml-5  "> Bölüm Ekle</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

