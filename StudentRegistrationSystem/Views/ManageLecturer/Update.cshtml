@model StudentRegistrationSystem.ViewModels.UpdateLecturerViewModel
@using StudentRegistrationSystem.Models.Entity
@using StudentRegistrationSystem.Helpers
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container rounded bg-white mt-5 ">
    <div class="row">
        @{ Model.LecturerID = Model.lecturer.LecturerID;}
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img src="data:image/png;base64,"
                     alt="Admin" class="rounded-circle" style="width: 80%;">
                <span class="font-weight-bold">@Model.lecturer.Name @Model.lecturer.LastName</span>
                <span class="text-black-50">Akademisyen</span>
                <br/>
                <span> <a href="@Url.Action("Courses","ManageLecturer",new{ LecturerID = Model.LecturerID})" class="btn btn-block btn-info">Verilen Dersler</a></span>
            </div>
        </div>
        <div class="col-md-5 border-right">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Akademisyen Bilgileri</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">İsim</label>
                            @Html.TextBoxFor(n => n.Name, new { @class = "form-control", placeholder = "İsim", required = "required", @Value = Model.lecturer.Name })

                        </div>
                        <div class="col-md-6">
                            <label class="labels">Soyisim</label>
                            @Html.TextBoxFor(n => n.LastName, new { @class = "form-control", placeholder = "Soyisim", required = "required", @Value = Model.lecturer.LastName })

                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Email</label>
                            @Html.TextBoxFor(n => n.Email, new { @class = "form-control", placeholder = "Email", required = "required", @Value = Model.lecturer.Email })
                            @Html.ValidationMessageFor(n => n.Email, "", new { @class = "text-danger" })
                        </div>


                        <div class="col-md-12">
                            <label class="labels">Bölüm</label>
                            @{ List<SelectListItem> departments = new List<SelectListItem>();}
                            @foreach (Department d in Model.departmentList)
                            {
                                if (Model.lecturer.DepartmentCode == d.DepartmentCode)
                                {
                                    departments.Add(new SelectListItem { Text = d.Name, Value = d.DepartmentCode, Selected = true });
                                }
                                else
                                {
                                    departments.Add(new SelectListItem { Text = d.Name, Value = d.DepartmentCode});
                                }
                            }
                            @Html.DropDownListFor(n => n.DepartmentCode, departments, new { @class = "form-control" })
                        </div>

                        <div class="col-md-12">
                            <label class="labels">Telefon</label>
                            @Html.TextBoxFor(n => n.Phone, new { @class = "form-control", placeholder = "Telefon Numarası", required = "required", pattern = "[0-9]+", @Value = Model.lecturer.Phone })
                        </div>

                    </div>

                    <div class="mt-5 text-center">

                        <input type="submit" value="Kaydet" class="btn  btn-block btn-success rounded-0 py-2">

                    </div>


                </div>
            }
            </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="row justify-content-center">

                    

                </div>
            </div>
        </div>
    </div>
</div>