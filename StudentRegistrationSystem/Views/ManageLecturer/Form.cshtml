@model StudentRegistrationSystem.ViewModels.LecturerListViewModel
    @using StudentRegistrationSystem.Models.Entity
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">
    <h3 class="text-muted text-center mb-3">Akademisyen Ekleme</h3>
</div>


<div class="container contact w-75">
    <div class="row bg-light">

        <div class="col-md-3" id="addLecturerForm">
            <div class="contact-info mt-4 ml-3">
                <i class="fas fa-plus fa-3x" style="color: green;"></i>


            </div>
        </div>

        <div class="col mt-4">


            @using (Html.BeginForm("AddLecturer", "ManageLecturer"))
            {
                @Html.AntiForgeryToken()
                <div class="contact-form">


                    <div class="form-group">
                        <label class="control-label " for="fname">İsim:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(n => n.Name, new { @class = "form-control", placeholder = "İsim", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label " for="fname">Soyisim:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(n => n.LastName, new { @class = "form-control", placeholder = "İsim", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label " for="fname">Telefon:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(n => n.Phone, new { @class = "form-control", pattern = "[0-9]+", placeholder = "Telefon Numarası", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label " for="fname">Email:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(n => n.Email, new { @class = "form-control", placeholder = "Email", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Bölüm</label>
                        <div class="col-sm-8">

                            @{
                                Department dummyDepartment = new Department();
                                dummyDepartment.Name = "Bölüm Seçiniz";
                                Model.departmentList.Insert(0, dummyDepartment);
                            }
                            @Html.DropDownListFor(m => m.DepartmentCode, new SelectList(Model.departmentList, "DepartmentCode", "Name"), new { @class = "form-control", required = "required", @id = "ddlDepartment" })

                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success ml-5  "> Akademisyen Ekle</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

